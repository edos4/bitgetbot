# ============================================================
# Bitget Futures Trading Engine - Environment Configuration
# ============================================================
# Copy this file to .env and fill in your credentials
# NEVER commit .env to version control

# --- Bitget API Credentials (required for live mode only) ---
BITGET_API_KEY=your_api_key_here
BITGET_SECRET_KEY=your_secret_key_here
BITGET_PASSPHRASE=your_passphrase_here

# --- Discord Webhook (optional) ---
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_url

# --- Trading Mode ---
# Options: paper | live
TRADING_MODE=paper

# --- Logging ---
LOG_LEVEL=INFO

# Set to true to log every scan decision (verbose)
# LOG_DECISION_TRACE=false

# --- SSL Verification (for development only) ---
# Set to true ONLY if you have SSL inspection/proxy blocking the API
# WARNING: Never use this with real funds - development/testing only
# DISABLE_SSL_VERIFICATION=false
